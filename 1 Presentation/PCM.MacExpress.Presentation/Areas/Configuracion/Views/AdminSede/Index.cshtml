<script>

    $(document).ready(function () {

        if (@ViewBag.wpv == 1) {
            bootbox.alert("Datos Grabados", function () {
                $("#ID_ENTIDAD_SEDE").val('');
                $("#NOMBRE").val('');

                $("#btnBuscarSede").trigger('click');
            });
        }

        if (@ViewBag.wpv == 2) {
            $("#btnBuscarSede").trigger('click');
        }
