<script>

    $(document).ready(function () {

        if (@ViewBag.wpv == 1) {

            $('#ID_ENTIDAD').val('');
            $('#DNI').val('');
            $('#NOMBRE').val('');
            $('#APELLIDO_PATERNO').val('');
            $('#APELLIDO_MATERNO').val('');
            $('#USUARIO').val('');
            $('#FECHA_CADUCA').val('');
            $('#ESTADO_VIGENCIA').val('');
            $('#TIPO_USUARIO').val('');

            bootbox.alert("Datos Grabados", function() {
                $("#btnBuscarUsuario").trigger('click');
            });
        }

        if (@ViewBag.wpv == 2) {
            $("#btnBuscarUsuario").trigger('click');
        }
    });

</script>
