<script>

    $('#btnCambiarClave').click(function () {

        var FormulariosPopupInstance = new BootstrapDialog({
            title: '<b></b>',
            message: $('<div></div>'),
            size: BootstrapDialog.SIZE_WIDE,
            closable: false,
            draggable: true
        });

        var url = '/Configuracion/AdminUsuario/CambiarClave';

        var message = $('<div></div>').load(url);
        FormulariosPopupInstance.setTitle("Restaurar Contraseña");
        FormulariosPopupInstance.setMessage(message);
        FormulariosPopupInstance.open();

        setTimeout(function () {
            $('.modal-header').removeClass('bootstrap-dialog-draggable').addClass('text-white').addClass('bg-rojo');
            $('.bootstrap-dialog-title').addClass('font-weight-bold')
        }, 200);
        
    });

</script>
